{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "module": "commonjs",
    "sourceMap": true,
    "target": "ES2017",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
